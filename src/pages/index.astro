---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Melika Mir Sajjadi - Portfolio">
	<!-- Fixed Attractor Background -->
	<div id="attractor-container" class="fixed inset-0 -z-10 bg-gray-900">
    	<p class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-gray-400">
      	Aizawa Attractor Background
    	</p>
  	</div>

	<!-- Hero Section (more compact) -->
  	<section class="min-h-[88vh] flex flex-col items-center justify-center">
    	<div class="text-center">
      		<h1 class="text-6xl font-bold mb-4 text-white/80">
        	Melika Mir Sajjadi
      		</h1>
      
    		<p class="text-xl text-gray-300">
        	Tagline
      		</p>
    	</div>
  	</section>

	<!-- About Me Section - 9x9 Bento Grid -->
	<section class="max-w-7xl mx-auto px-10 py-15">
  		<div class="grid grid-cols-9 grid-rows-7 gap-5 h-[800px]">

    		<!-- Picture Card -->
			<div class="col-span-3 row-span-5 rounded-lg p-0.25 border border-white/10">
  				<img 
    				src="/pic.jpg" 
    				alt="Melika Mir Sajjadi Picture" 
    				class="w-full h-full object-cover rounded-lg"
  				/>
			</div>

			<!-- Location Card -->
			<div class="col-span-3 row-span-1 row-start-6 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex items-center border border-white/10 ">
  				<p class="font-semibold text-white/80">Location</p>
			</div>

			<!-- Resume Card -->
			<div class="col-span-3 row-span-1 row-start-7 col-start-1 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex items-center border border-white/10">
  				<p class="font-semibold text-white/80">Resume</p>
			</div>
		
		
			<!-- About Me Card -->
			<div class="col-span-3 row-span-3 row-start-1 col-start-4 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">About Me</p>
			</div>
		
			<!-- Now Card -->
			<div class="col-span-3 row-span-3 row-start-4 col-start-4 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">Now</p>
			</div>

			<!-- Projects Card -->
			<div class="col-span-3 row-span-1 row-start-7 col-start-4 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">Projects</p>
			</div>

			<!-- Now Card -->
			<div class="col-span-3 row-span-4 row-start-1 col-start-7 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">Areas of Interest</p>
			</div>

			<!-- Language Card -->
			<div class="col-span-3 row-span-2 row-start-5 col-start-7 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">Languages</p>
			</div>

			<!-- Projects Card -->
			<div class="col-span-3 row-span-1 row-start-7 col-start-7 bg-white/5 backdrop-blur-sm rounded-lg p-10 flex border border-white/10">
  				<p class="font-semibold text-white/80">Blog</p>
			</div>

  		</div>
	</section>

	<!-- Let's Connect Section -->
	<section class="max-w-7xl mx-auto px-10 py-15 h-[400px] flex items-center justify-center">		
		<div class="w-full">
			<div class="text-center mb-8">
				<!-- Handshake Icon -->
				<div class="text-6xl mb-4">
					ü§ù
				</div>
				<!-- Title -->
    			<h2 class="text-4xl font-bold text-white mb-2">
      			Let's Connect!
    			</h2>
  			</div>

			<!-- Social Cards Grid -->
			<div class="grid grid-cols-9 grid-rows-1 gap-5">
				<!-- Empty spacers to center -->
				<div class="col-span-3"></div>
			
				<div class="col-span-1 aspect-square bg-white/5 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
					<p class="font-semibold text-white text-2xl">G</p>
				</div>
				<div class="col-span-1 aspect-square bg-white/5 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
					<p class="font-semibold text-white/80 text-2xl">L</p>
				</div>
				<div class="col-span-1 aspect-square bg-white/5 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
					<p class="font-semibold text-white/80 text-2xl">E</p>
				</div>
			</div>
    	</div>
	</section>
</BaseLayout>