---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<BaseLayout title="Projects - Melika Mir Sajjadi">
  <section class="max-w-7xl mx-auto px-10 py-16">
    <h1 class="text-5xl font-bold text-white mb-8">Projects</h1>
    
    <!-- TODO: Filter / sort -->

    <div class="mb-12">
        <!-- Top Bar: Sort (left) and Filter (right) -->
        <div class="flex justify-between items-center mb-4">
    
            <!-- Sort Dropdown (Left) -->
            <div class="relative">
                <label class="text-white/60 text-sm mr-2">Sort by:</label>
                <select 
                id="sort-select"
                class="px-4 py-2 bg-white/10 text-white/80 rounded-lg border border-white/20 hover:bg-white/20 transition-colors cursor-pointer"
                >
                    <option value="newest" class="bg-gray-800" selected>Newest First</option>
                    <option value="oldest" class="bg-gray-800">Oldest First</option>
                </select>
            </div>
    
            <!-- Filter Button (Right) -->
            <div class="relative">
                <button 
                id="filter-btn"
                class="px-4 py-2 bg-white/10 text-white/80 rounded-lg border border-white/20 hover:bg-white/20 transition-colors flex items-center gap-2"
                >
                    <span>üîç</span>
                    <span>Filter</span>
                </button>
                
                <!-- Filter Dropdown (hidden by default) -->
                <div
                    id="filter-menu"
                    class="hidden absolute right-0 top-full mt-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-lg p-6 min-w-[300px] z-20"
                >
                    <div class="space-y-4">
                        <!-- Filter by Domain -->
                        <div>
                            <h4 class="text-white font-semibold mb-3">Domain</h4>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="machine-learning" class="w-4 h-4 filter-checkbox" data-category="domain">
                                    <span>Machine Learning</span>
                                </label>
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="web-dev" class="w-4 h-4 filter-checkbox" data-category="domain">
                                    <span>Web Dev</span>
                                </label>
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="research" class="w-4 h-4 filter-checkbox" data-category="domain">
                                    <span>Research</span>
                                </label>
                            </div>
                        </div>

                        <!-- Filter by stack -->
                        <div>
                            <h4 class="text-white font-semibold mb-3">Tech Stack</h4>
                            <div class="space-y-2">
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="python" class="w-4 h-4 filter-checkbox" data-category="stack">
                                    <span>Python</span>
                                </label>
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="react" class="w-4 h-4 filter-checkbox" data-category="stack">
                                    <span>React</span>
                                </label>
                                <label class="flex items-center gap-2 text-white/80 hover:text-white cursor-pointer">
                                    <input type="checkbox" value="typescript" class="w-4 h-4 filter-checkbox" data-category="stack">
                                    <span>TypeScript</span>
                                </label>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
  
        <!-- TODO: Active Filters Display -->
        <div id="active-filters" class="flex flex-wrap gap-2">
            <!-- Active filter tags will appear here -->
            
        </div>
    </div>

    <div class="columns-1 md:columns-2 lg:columns-3 gap-6 mt-12 space-y-6">
        <!-- Sample cards - REMOVE later -->
        <ProjectCard 
            title="Project One"
            stack={['React', 'TypeScript', 'Node.js']}
            domain={['Web Development']}
            slug="project-one"
            demoLink="https://github.com/..."
        />

        <ProjectCard 
            title="Project Two"
            stack={['Python', 'PyTorch', 'Node.js']}
            domain={['Machine Learning', 'Research', 'Data Science', 'NLP']}
            slug="project-one"
            demoLink="https://github.com/..."
        />

        <ProjectCard 
            title="Project Three"
            stack={['Python', 'Matplotlib', 'Pandas', 'Seaborn', 'NumPy', 'R', 'Seaborn']}
            domain={['Data Science', 'Hackathon']}
            slug="project-one"
        />
        <ProjectCard 
            title="Project Four"
            stack={['React', 'TypeScript', 'Node.js']}
            domain={['Web Development']}
            slug="project-one"
            demoLink="https://github.com/..."
        />
    </div>
  </section>
</BaseLayout>