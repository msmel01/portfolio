---
const { title, stack, domain, slug, demoLink } = Astro.props;
---

<a href={`/projects/${slug}`} class="group block break-inside-avoid mb-6">
  <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-lg p-6 hover:bg-white/10 transition-colors">
    <!-- Project Title -->
    <h3 class="text-xl font-bold text-white mb-3">{title}</h3>
    
    <!-- Domain Tags -->
    <div class="flex flex-wrap gap-2 mb-3">
      {domain.map((d) => (
        <span class="px-3 py-1 bg-blue-500/20 text-blue-300 text-sm rounded-full border border-blue-500/30">
          {d}
        </span>
      ))}
    </div>
    
    <!-- Tech Stack Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {stack.map((tech) => (
        <span class="px-3 py-1 bg-white/10 text-white/80 text-sm rounded-full">
          {tech}
        </span>
      ))}
    </div>
    
    <!-- External Link (if provided) -->
    {demoLink && (
      <div class="flex items-center gap-2 text-white/60 text-sm">
        <span>ðŸ”— View Demo</span>
      </div>
    )}
  </div>
</a>